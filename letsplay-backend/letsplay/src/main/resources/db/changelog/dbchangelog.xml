<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

    <changeSet  id="1"  author="Marie-KD">

        <sql dbms="h2" endDelimiter=";">

            CREATE SCHEMA music

        </sql>

    </changeSet>

    <changeSet  id="2"  author="Marie-KD">
        <createTable  tableName="roles" schemaName="music">
            <column  name="id"  type="integer">
                <constraints  primaryKey="true"  nullable="false"/>
            </column>
            <column  name="name"  type="varchar(50)">
                <constraints  nullable="false"/>
            </column>
        </createTable>

        <createTable  tableName="app_user" schemaName="music">
            <column  name="user_id"  type="UUID">
                <constraints  primaryKey="true"  nullable="false"/>
            </column>
            <column  name="name"  type="varchar(50)">
                <constraints  nullable="false"/>
            </column>
            <column  name="email"  type="varchar(50)">
                <constraints  nullable="false"/>
            </column>
            <column  name="password"  type="varchar(255)">
                <constraints  nullable="false"/>
            </column>
        </createTable>

        <createTable  tableName="user_roles" schemaName="music">
            <column  name="user_id"  type="UUID">
                <constraints  nullable="false"
                              foreignKeyName="user_id" references="app_user(user_id)"
                              deleteCascade="true"/>
            </column>
            <column  name="role_id"  type="integer">
                <constraints  nullable="false" foreignKeyName="role_id"
                              references="roles(id)"/>
            </column>
        </createTable>

        <createTable  tableName="musician_type" schemaName="music">
            <column  name="id"  type="integer">
                <constraints  primaryKey="true"  nullable="false"/>
            </column>
            <column  name="type"  type="varchar(50)">
                <constraints  nullable="false"/>
            </column>
        </createTable>

        <createTable  tableName="style" schemaName="music">
            <column  name="id"  type="integer">
                <constraints  primaryKey="true"  nullable="false"/>
            </column>
            <column  name="style"  type="varchar(50)">
                <constraints  nullable="false"/>
            </column>
        </createTable>

        <createTable  tableName="location" schemaName="music">
            <column  name="id"  type="integer">
                <constraints  primaryKey="true"  nullable="false"/>
            </column>
            <column  name="region"  type="varchar(50)">
                <constraints  nullable="false"/>
            </column>
        </createTable>

        <createTable  tableName="ad" schemaName="music">
            <column  name="id"  type="UUID">
                <constraints  primaryKey="true"  nullable="false"/>
            </column>
            <column  name="created_at"  type="date">
                <constraints  nullable="false"/>
            </column>
            <column  name="posted_by"  type="UUID">
                <constraints  nullable="false"/>
            </column>
            <column  name="title"  type="varchar(50)">
                <constraints  nullable="false"/>
            </column>
            <column  name="seeking_musician_type"  type="integer">
                <constraints  nullable="false"/>
            </column>
            <column  name="image"  type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column  name="style_type"  type="integer">
                <constraints  nullable="false"/>
            </column>
            <column  name="location_region"  type="integer">
                <constraints nullable="false"/>
            </column>
            <column  name="location_city"  type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column  name="description"  type="varchar(100)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="Marie-KD">
        <addForeignKeyConstraint
                baseTableSchemaName="music"
                baseTableName="ad"
                baseColumnNames="posted_by"
                referencedTableName="app_user"
                referencedColumnNames="user_id"
                constraintName="fk_app_user_id"
                deleteCascade="true"
        />

        <addForeignKeyConstraint
                baseTableSchemaName="music"
                baseTableName="ad"
                baseColumnNames="seeking_musician_type"
                referencedTableName="musician_type"
                referencedColumnNames="id"
                constraintName="fk_seeking_musician_type"
        />
        <addForeignKeyConstraint
                baseTableSchemaName="music"
                baseTableName="ad"
                baseColumnNames="style_type"
                referencedTableName="style"
                referencedColumnNames="id"
                constraintName="fk_style_type"
        />
        <addForeignKeyConstraint
                baseTableSchemaName="music"
                baseTableName="ad"
                baseColumnNames="location_region"
                referencedTableName="location"
                referencedColumnNames="id"
                constraintName="fk_region_id"
        />
    </changeSet>

    <changeSet id="4" author="Marie-KD">
        <addAutoIncrement columnDataType="int"
                          columnName="id"
                          defaultOnNull="false"
                          generationType="ALWAYS"
                          incrementBy="1"
                          schemaName="music"
                          tableName="musician_type"/>
        <insert tableName="musician_type">
            <column name="type" value="vocalist" />
        </insert>
        <insert tableName="musician_type" schemaName="music">
            <column name="type" value="guitar" />
        </insert>
        <insert tableName="musician_type" schemaName="music">
            <column name="type" value="bass" />
        </insert>
        <insert tableName="musician_type" schemaName="music">
            <column name="type" value="drums" />
        </insert>
        <insert tableName="musician_type" schemaName="music">
            <column name="type" value="synths" />
        </insert>
        <insert tableName="musician_type" schemaName="music">
            <column name="type" value="miscelleanous" />
        </insert>
    </changeSet>

    <changeSet id="5" author="Marie-KD">
        <addAutoIncrement columnDataType="int"
                          columnName="id"
                          defaultOnNull="false"
                          generationType="ALWAYS"
                          incrementBy="1"
                          schemaName="music"
                          tableName="style"/>
        <addAutoIncrement columnDataType="int"
                          columnName="id"
                          defaultOnNull="false"
                          generationType="ALWAYS"
                          incrementBy="1"
                          schemaName="music"
                          tableName="location"/>
    </changeSet>

    <!--    Inserts Ã  partir de ce point -->
    <changeSet id="6" author="Marie-KD">
        <addAutoIncrement columnDataType="int"
                          columnName="id"
                          defaultOnNull="false"
                          generationType="ALWAYS"
                          incrementBy="1"
                          schemaName="music"
                          tableName="roles"/>

        <insert tableName="roles" schemaName="music">
            <column name="name" value="USER" />
        </insert>
        <insert tableName="roles" schemaName="music">
            <column name="name" value="ADMIN" />
        </insert>
    </changeSet>

</databaseChangeLog>